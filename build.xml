<project>
  <property name="classpath"
            value="./deps/libthrift-0.9.0.jar:./deps/slf4j.api-1.6.1.jar:./deps/hive-service-0.9.0-cdh4.1.3.jar:./deps/hive-metastore-0.9.0-cdh4.1.3.jar:bin/"/>
  <target name="compile">
    <mkdir dir="classes"/>
    <javac srcdir="gen-java" destdir="classes" classpath="${classpath}">
      <include name="**/*.java"/>
    </javac>
  </target>

  <target name="jar">
    <mkdir dir="jar"/>
    <jar destfile="jar/ImpalaService.jar" basedir="classes/">
      <manifest>
      </manifest>
    </jar>
  </target>

</project>
